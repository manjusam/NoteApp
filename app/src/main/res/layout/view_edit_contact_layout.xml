<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vec_contact_linear"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/vec_contact_textview"
            android:scrollbars="vertical"
            android:text="sample"
            android:textColor="#345243"
            android:textAllCaps="true"

            />
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/vec_btn_edit"
        android:layout_below="@+id/vec_contact_linear"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/vec_btn_cancel"
       android:text="CANCEL"
       android:layout_below="@+id/vec_contact_linear"
       android:layout_toEndOf="@+id/vec_btn_edit" />

</RelativeLayout>
