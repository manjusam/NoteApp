<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
    android:background="#5567"
    android:weightSum="1">

    <TextView
        android:layout_width="283dp"
        android:layout_height="0dp"
        android:text="Type your reminder note(1000 character)"
        android:id="@+id/type_text"

        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

     <EditText
         android:layout_width="280dp"
         android:layout_height="100dp"
         android:layout_marginTop="20dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/rounded_edit"
         android:maxLength="10"

         android:id="@+id/reminder_edittext"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacts"
        android:id="@+id/load_contacts_button"
        android:onClick="retrieve"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp" android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:id="@+id/cancel_button"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button"

            />
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/background_button"
            android:id="@+id/see_button"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="SEE ALL"
            />
    </LinearLayout>
</LinearLayout>
