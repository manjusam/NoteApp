<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent"
   >


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
    android:id="@+id/upper_linear" >
      <TextView
          android:layout_width="295dp"
          android:layout_height="89dp"
          android:text="reminder is display here from database"
          android:id="@+id/remainder_seeall" />

  </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/sa_btn_delete"

        android:layout_below="@+id/upper_linear"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:id="@+id/sa_btn_show"
        android:layout_alignBottom="@+id/upper_linear"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/time_stamp_view"
        android:layout_below="@+id/upper_linear"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/delete_icon"
        android:layout_alignEnd="@+id/upper_linear" />


</RelativeLayout>
