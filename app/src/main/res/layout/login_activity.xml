<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#786"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FloatingActivity"
    android:id="@+id/main_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/email_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Note App"
        android:id="@+id/note_app"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email"
        android:background="#890777"
        android:layout_alignBottom="@+id/email_text"
        android:layout_alignLeft="@+id/note_app"
        android:layout_alignStart="@+id/note_app"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Password"
        android:id="@+id/pass_text"
        android:layout_below="@+id/email_text"
        android:layout_alignLeft="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_marginTop="70dp"
        android:layout_toLeftOf="@+id/edit_email"
        android:layout_toStartOf="@+id/edit_email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:background="#888888"
        android:layout_alignBottom="@+id/pass_text"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Device"
        android:id="@+id/Register_button"
        android:onClick="click_Register"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Terms of use"
        android:id="@+id/terms_use"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pass_text"
        android:layout_toEndOf="@+id/pass_text" />


</RelativeLayout>
